{
  "$schema": "./node_modules/@lunariajs/core/config.schema.json",
  "repository": {
    "name": "thomasbnt/recipes-unnamed-project",
    "hosting": "github"
  },
  "files": [
    {
      "location": "src/content/docs/**/*.{md,mdx}",
      "pattern": "src/content/docs/@lang/@path",
      "type": "universal"
    }
  ],
  "outDir": "./lunaria",
  "defaultLocale": {
    "lang": "en",
    "label": "English"
  },
  "locales": [
    {
      "lang": "en",
      "label": "English"
    },
    {
      "lang": "fr",
      "label": "Fran√ßais"
    }
  ],
  "ignoreKeywords": [
    "i18nIgnore",
    "fr-only"
  ],
  "dashboard": {
    "title": "Localization",
    "description": "Page preview for the localization."
  }
}